<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="All Test Suite" data-provider-thread-count="5">
    <test name ="CucumberRunner_chrome">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="runner.TestNGCucumberRunner"/>
        </classes>
    </test>

    <test name ="CucumberRunner_firefox">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="runner.TestNGCucumberRunner"/>
        </classes>
    </test>

    <listeners>
        <listener class-name = "utilities.retry.AnnotationTransformation"/>
    </listeners>
</suite>